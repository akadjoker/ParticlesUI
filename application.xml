	<!-- output -->
	<app main="com.djoker.glteste.Main" file="particles" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="900" height="640" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
